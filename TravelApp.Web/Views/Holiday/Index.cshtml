@model IEnumerable<TravelApp.Core.DTOModels.HolidayDto>

<h2>Holidays</h2>

@foreach (var item in Model)
{
    <div>
        <h4>@item.Destination</h4>
        <p>@item.Description</p>
        <img src="@item.ImageUrl" alt="Holiday Image" style="max-width: 200px; max-height: 150px;" />
        <p>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
        </p>
    </div>
}
