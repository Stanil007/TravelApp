@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> amenities, categories and holidays.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> and <b>all bookings</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Amenity" asp-action="AllAmenities"
       class="btn btn-primary btn-lg">All amenities</a>
    <a asp-area="" asp-controller="Houses" asp-action="AllCategories"
       class="btn btn-primary btn-lg">All amenities</a>
    <a asp-area="" asp-controller="Houses" asp-action="AllHolidays"
       class="btn btn-primary btn-lg">Add House</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Houses" asp-action="Mine"
       class="btn btn-primary btn-lg">My Houses</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Rents" asp-action="All"
       class="btn btn-primary btn-lg">All Rents</a>
    <a asp-area="Admin" asp-controller="Users" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>
